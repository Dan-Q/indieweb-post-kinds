{
    "require": {
	"php": ">=5.3.0",
	"mf2/mf2": "dev-master"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4",
	"squizlabs/php_codesniffer": "^2.2 || ^3.0.2",
        "wimg/php-compatibility": "dev-master",
        "wp-coding-standards/wpcs": "dev-master"
    },
    "prefer-stable" : true,
    "scripts": {
        "lint": "phpcs",
